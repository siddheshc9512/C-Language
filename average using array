/*
  WAP to calculate average marks of a 10 students.
*/

#include<stdio.h>
int main()
{

int num;
printf("Enter the array size of student");
scanf("%d",&num);
int a[num];
int i,j;
float avg,sum=0;
printf("Enter the marks ");
for(i=0;i<=num-1;i++)
{
scanf("%d",&a[i]);
}

for(j=0;j<=num-1;j++)
{
printf("%d ",a[j]);
sum=sum+a[j];
}
avg=sum/num;
 
printf("\n your total marks is  =  %f",sum);
printf("\nyour avg is  =  %.2f",avg);

return 0;
}
