//Create a structure Employee. Accept data for 5 employees and display it
#include <stdio.h>
#include <string.h>
struct employee
{
int emp_id;
char name[30];
int salary;
}e[5];

int main()
{
int i;

for(i=0;i<5;i++)
{
printf("Enter the employee id : ");
scanf("%d",&e[i].emp_id);

printf("Enter the employee name : ");
scanf("%s",&e[i].name);

printf("Enter the salary of employee : ");
scanf("%d",&e[i].salary);

}

for(i=0;i<5;i++)
{
printf("The employee id :  %d\n",e[i].emp_id);
printf("the name of employee : %s\n",e[i].name);
printf("salary of employee : %d\n",e[i].salary);


}


return 0;
}
